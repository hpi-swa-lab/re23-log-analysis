# MCD: Automatically copied from pyproject.toml's legacy_tox_ini key
[tox]
envlist = pre-commit, py37, py38, py39, py310, py311, pypy3
skip_missing_interpreters = true
minversion = 4.4.3

[testenv]
depends = pre-commit
package = editable
commands = coverage run -m pytest {posargs}
extras = test

[testenv:pre-commit]
depends =
basepython = python3
package = skip
deps = pre-commit
commands = pre-commit run --all-files

[testenv:pyright]
deps = pyright
commands = pyright --verifytypes anyio

[testenv:docs]
depends =
extras = doc
commands = sphinx-build -W -n docs build/sphinx
